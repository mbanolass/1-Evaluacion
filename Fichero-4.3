# Leemos 20 numeros enteros.
# sumamos los pares por un lado
# sumamos los impares por otro
def sumar_par_impar():
    suma_par=0
    suma_impar=0
    for cont in range (0,21):
        num=int(input("Dame un numero "))
        if (num%2==0): # Importante % porque con / no funciona
            print ("ES PAR") # Rama PAR
            suma_par=suma_par+num
        else:
            print ("ES IMPAR") # Rama IMPAR
            suma_impar=suma_impar+num
    print ("Suma de PARES = "+str(suma_par))
    print ("Suma de IMPARES = "+str(suma_impar))
sumar_par_impar()   
